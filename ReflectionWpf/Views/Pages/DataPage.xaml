<ui:UiPage
	x:Class="ReflectionWpf.Views.Pages.DataPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:models="clr-namespace:ReflectionWpf.Models"
	xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
	xmlns:models1="clr-namespace:ReflectionWpf.Models"
	Title="DataPage"
	d:Background="{DynamicResource ApplicationBackgroundBrush}"
	d:DataContext="{d:DesignInstance local:DataPage,
	                                 IsDesignTimeCreatable=False}"
	d:DesignHeight="150"
	d:DesignWidth="800"
	Foreground="{DynamicResource TextFillColorPrimaryBrush}"
	mc:Ignorable="d">

	<Grid>
		<ui:VirtualizingItemsControl
			Foreground="{DynamicResource TextFillColorSecondaryBrush}"
			ItemsSource="{Binding ViewModel.Colors, Mode=OneWay}"
			VirtualizingPanel.CacheLengthUnit="Item">
			<ItemsControl.ItemTemplate>
				<DataTemplate DataType="{x:Type models1:DataColorModel}">
					<ui:Button
						Width="80"
						Height="80"
						Margin="2"
						Padding="0"
						HorizontalAlignment="Stretch"
						VerticalAlignment="Stretch"
						Appearance="Secondary"
						Background="{Binding Color, Mode=OneWay}"
						FontSize="25"
						Icon="Fluent24" />
				</DataTemplate>
			</ItemsControl.ItemTemplate>
		</ui:VirtualizingItemsControl>
	</Grid>
</ui:UiPage>
