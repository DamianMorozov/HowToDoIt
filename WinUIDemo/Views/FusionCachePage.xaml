<Page
	x:Class="WinUIDemo.Views.FusionCachePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:helpers="using:WinUIDemo.Helpers"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:model="using:WinUIDemo.Core.Models"
	DataContext="{x:Bind ViewModel}"
	mc:Ignorable="d">

	<Grid x:Name="ContentArea">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1.4*" />
			<ColumnDefinition Width="0.6*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<!--  Settings  -->
		<Border
			Grid.Row="0"
			Grid.RowSpan="4"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			BorderBrush="BlueViolet"
			BorderThickness="1,1,1,1"
			CornerRadius="5" />
		<TextBlock
			Grid.Row="0"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="Elapsed" />
		<TextBlock
			Grid.Row="0"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.Elapsed, Mode=OneWay}" />
		<TextBlock
			Grid.Row="1"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="FusionCacheExtensions.Duration" />
		<TextBlock
			Grid.Row="1"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind helpers:FusionCacheExtensions.Duration, Mode=OneWay}" />
		<TextBlock
			Grid.Row="2"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="FusionCacheExtensions.FailSafeThrottleDuration" />
		<TextBlock
			Grid.Row="2"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind helpers:FusionCacheExtensions.FailSafeThrottleDuration, Mode=OneWay}" />
		<TextBlock
			Grid.Row="3"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="FusionCacheExtensions.FailSafeMaxDuration" />
		<TextBlock
			Grid.Row="3"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind helpers:FusionCacheExtensions.FailSafeMaxDuration, Mode=OneWay}" />
		<!--  FusionCache Dependency  -->
		<Border
			Grid.Row="4"
			Grid.RowSpan="4"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Margin="0,5,0,0"
			BorderBrush="BlueViolet"
			BorderThickness="1,1,1,1"
			CornerRadius="5" />
		<TextBlock
			Grid.Row="4"
			Grid.Column="0"
			Margin="5,5,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="TestIntDependency" />
		<TextBlock
			Grid.Row="4"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.TestIntDependency, Mode=OneWay}" />
		<TextBlock
			Grid.Row="5"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="TestStringDependency" />
		<TextBlock
			Grid.Row="5"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.TestStringDependency, Mode=OneWay}" />
		<TextBlock
			Grid.Row="6"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="TestPersonDependency.Name" />
		<TextBlock
			Grid.Row="6"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.TestPersonDependency.Name, Mode=OneWay}" />
		<TextBlock
			Grid.Row="7"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="TestPersonDependency.BirthDay" />
		<TextBlock
			Grid.Row="7"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.TestPersonDependency.BirthDay, Mode=OneWay}" />
		<!--  FusionCache Direct  -->
		<Border
			Grid.Row="8"
			Grid.RowSpan="4"
			Grid.Column="0"
			Grid.ColumnSpan="2"
			Margin="0,5,0,0"
			BorderBrush="BlueViolet"
			BorderThickness="1,1,1,1"
			CornerRadius="5" />
		<TextBlock
			Grid.Row="8"
			Grid.Column="0"
			Margin="5,5,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="TestIntDirect" />
		<TextBlock
			Grid.Row="8"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.TestIntDirect, Mode=OneWay}" />
		<TextBlock
			Grid.Row="9"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="TestStringDirect" />
		<TextBlock
			Grid.Row="9"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.TestStringDirect, Mode=OneWay}" />
		<TextBlock
			Grid.Row="10"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="TestPersonDirect.Name" />
		<TextBlock
			Grid.Row="10"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.TestPersonDirect.Name, Mode=OneWay}" />
		<TextBlock
			Grid.Row="11"
			Grid.Column="0"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="TestPersonDirect.BirthDay" />
		<TextBlock
			Grid.Row="11"
			Grid.Column="1"
			Margin="5,0,0,0"
			FontWeight="Bold"
			HorizontalTextAlignment="Left"
			Text="{x:Bind ViewModel.TestPersonDirect.BirthDay, Mode=OneWay}" />
		<!--  Actions  -->
		<Button
			x:Uid="ResetButton"
			Grid.Row="12"
			Grid.Column="0"
			Margin="10,10,10,10"
			HorizontalAlignment="Stretch"
			Command="{x:Bind ViewModel.ResetCommand, Mode=OneWay}" />
		<Button
			x:Uid="GetButton"
			Grid.Row="12"
			Grid.Column="1"
			Margin="10,10,10,10"
			HorizontalAlignment="Stretch"
			Command="{x:Bind ViewModel.GetCommand, Mode=OneWay}" />
	</Grid>
</Page>
